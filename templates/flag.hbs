<div class="container">
    <!-- This example requires Tailwind CSS v2.0+ -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <form action="/flag/{{id}}" method="POST">
            <div class="px-4 py-5 sm:px-6">
                <div class="float-left mb-5">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">
                        Flag
                    </h3>
                    <p class="mt-1 max-w-2xl text-sm text-gray-500">
                        // id: {{id}}
                    </p>
                </div>
                <div class="float-right">
                    <!-- Toggle Button -->
                    <label for="toogleA" class="flex items-center cursor-pointer mt-3">
                        <!-- label -->
                        <div class="ml-3 mr-3 text-gray-700 font-medium"> Enabled</div>
                        <!-- toggle -->
                        <div class="relative">
                            <!-- input -->
                            <input id="toogleA" type="checkbox" class="hidden" name="enabled"/>
                            <!-- line -->
                            <div class="toggle__line w-10 h-4 bg-gray-400 rounded-full shadow-inner"></div>
                            <!-- dot -->
                            <div class="toggle__dot absolute w-6 h-6 bg-white rounded-full shadow inset-y-0 left-0"></div>
                        </div>
                    </label>
                </div>
            </div>
            <div class="border-t border-gray-200 clear-both">
                <dl>
                    <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Name
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{name}}
                        </dd>
                    </div>
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Description
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{description}}
                        </dd>
                    </div>
                </dl>
            </div>
            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                <button type="submit"
                        class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Save
                </button>
            </div>
        </form>
    </div>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg mt-5">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                History
            </h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">
                Past snapshots for this flag
            </p>
        </div>
        <div class="border-t border-gray-200">
            <dl>
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        Snapshot 1
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 border-2 border-indigo-800 bg-white p-3 rounded-lg">
                        <pre class="diff">{{json}}</pre>
                    </dd>
                </div>
            </dl>
